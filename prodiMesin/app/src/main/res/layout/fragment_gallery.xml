                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Gallery 6 -->
        <LinearLayout
            android:id="@+id/group6"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/white_box2"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_below="@id/group4"
            android:layout_toRightOf="@id/group3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/gallery6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gallery6" />

            <TextView
                android:id="@+id/textGallery6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/text_gallery_6"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Gallery 7 -->
        <LinearLayout
            android:id="@+id/group7"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/white_box2"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_below="@id/group5"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/gallery7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gallery7" />

            <TextView
                android:id="@+id/textGallery7"
                android:layout_width="wrap_content"
