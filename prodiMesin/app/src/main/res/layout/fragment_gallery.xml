        </LinearLayout>

        <!-- Gallery 8 -->
        <LinearLayout
            android:id="@+id/group8"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/white_box2"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_below="@id/group6"
