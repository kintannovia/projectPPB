<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/struktur_organisasi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detail.StrukturOrganisasiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/white_box2"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_back"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/text_struktur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/judul_struktur"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@id/back_button" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/teks_struktur_organisasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/teks_struktur"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black">
        </TextView>


        <ImageView
            android:id="@+id/image_struktur"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_below="@id/teks_struktur_organisasi"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/struktur_organisasi"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>